{
  "id": null,
  "uid": null,
  "title": "HTTP - Golden Signals",
  "tags": ["http", "golden-signals"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "query": "label_values(http_request_duration_seconds_count, service)",
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "RPS (total)",
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count{service=\"$service\"}[1m]))",
          "legendFormat": "rps",
          "datasource": "Prometheus",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" }, "overrides": [] },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "RPS by status class",
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count{service=\"$service\",status_code=~\"2..\"}[1m]))",
          "legendFormat": "2xx",
          "datasource": "Prometheus",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_request_duration_seconds_count{service=\"$service\",status_code=~\"4..\"}[1m]))",
          "legendFormat": "4xx",
          "datasource": "Prometheus",
          "refId": "B"
        },
        {
          "expr": "sum(rate(http_request_duration_seconds_count{service=\"$service\",status_code=~\"5..\"}[1m]))",
          "legendFormat": "5xx",
          "datasource": "Prometheus",
          "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" }, "overrides": [] },
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Error rate (%)",
      "targets": [
        {
          "expr": "100 * ( (sum(rate(http_request_duration_seconds_count{service=\"$service\",status_code=~\"4..\"}[$__rate_interval])) or on() vector(0)) / clamp_min((sum(rate(http_request_duration_seconds_count{service=\"$service\"}[$__rate_interval])) or on() vector(0)), 1e-9) )",
          "legendFormat": "4xx error %",
          "datasource": "Prometheus",
          "refId": "A"
        },
        {
          "expr": "100 * ( (sum(rate(http_request_duration_seconds_count{service=\"$service\",status_code=~\"5..\"}[$__rate_interval])) or on() vector(0)) / clamp_min((sum(rate(http_request_duration_seconds_count{service=\"$service\"}[$__rate_interval])) or on() vector(0)), 1e-9) )",
          "legendFormat": "5xx error %",
          "datasource": "Prometheus",
          "refId": "B"
        },
        {
          "expr": "100 * ( (sum(rate(http_request_duration_seconds_count{service=\"$service\",status_code=~\"4..|5..\"}[$__rate_interval])) or on() vector(0)) / clamp_min((sum(rate(http_request_duration_seconds_count{service=\"$service\"}[$__rate_interval])) or on() vector(0)), 1e-9) )",
          "legendFormat": "4xx+5xx error %",
          "datasource": "Prometheus",
          "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Latency p50 / p90 / p99 (s)",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum by (le)(rate(http_request_duration_seconds_bucket{service=\"$service\"}[5m])))",
          "legendFormat": "p50",
          "datasource": "Prometheus",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.9, sum by (le)(rate(http_request_duration_seconds_bucket{service=\"$service\"}[5m])))",
          "legendFormat": "p90",
          "datasource": "Prometheus",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le)(rate(http_request_duration_seconds_bucket{service=\"$service\"}[5m])))",
          "legendFormat": "p99",
          "datasource": "Prometheus",
          "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Latency p99 by route (top 5)",
      "targets": [
        {
          "expr": "topk(5, histogram_quantile(0.99, sum by (route, le)(rate(http_request_duration_seconds_bucket{service=\"$service\"}[5m]))))",
          "legendFormat": "{{route}}",
          "datasource": "Prometheus",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "HTTP requests in flight",
      "targets": [
        {
          "expr": "sum(http_requests_in_flight{service=\"$service\"})",
          "legendFormat": "in_flight",
          "datasource": "Prometheus",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Avg request size (bytes)",
      "targets": [
        {
          "expr": "sum(rate(http_request_size_bytes_sum{service=\"$service\"}[5m])) / sum(rate(http_request_size_bytes_count{service=\"$service\"}[5m]))",
          "legendFormat": "avg req size",
          "datasource": "Prometheus",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Avg response size (bytes)",
      "targets": [
        {
          "expr": "sum(rate(http_response_size_bytes_sum{service=\"$service\"}[5m])) / sum(rate(http_response_size_bytes_count{service=\"$service\"}[5m]))",
          "legendFormat": "avg resp size",
          "datasource": "Prometheus",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 }
    }
  ]
}